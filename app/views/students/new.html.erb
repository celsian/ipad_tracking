<h1>New Student:</h1>
<%= form_for @student do |f| %>

<div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true %>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <%= f.label :id_number %>
    <%= f.text_field :id_number %>
    <%= f.label :grade_level %>
    <%= f.collection_select :grade_level, Student::GRADE_LEVEL, :to_i, :to_i, :include_blank => false %>
</div>

<div id="error_explanation">
    <% if @student.errors.any? %>
      <%= render "errors", object: f.object %>
    <% end %>
</div>

  <%= f.submit class: 'btn btn-primary'  %>
<% end %>